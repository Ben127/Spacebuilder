@{
    Layout = "_Alipay";
    string orderNumber = TempData.Get<string>("OrderNumber", string.Empty);
    string orderName = TempData.Get<string>("OrderName", string.Empty);
    string orderMoney = TempData.Get<string>("OrderMoney", string.Empty);
    string orderDescribe = TempData.Get<string>("OrderDescribe", string.Empty);
    string productExhibitionUrl = TempData.Get<string>("ProductExhibitionUrl", string.Empty);
}
@ViewBag.url
<div class="tn-box tn-widget tn-widget-content tn-corner-all spb-pay-box">
    <div class="tn-box-content tn-widget-content tn-corner-all">
        <div class="tn-main-heading tn-border-gray tn-border-bottom">
            <div class="tn-option"><a class="tn-action" href="http://www.alipay.com/"><span class="tn-action-text">支付宝首页</span></a></div>
            <h2>支付宝即时到账交易接口快速通道</h2>
        </div>
        <div class="tn-instructions">
            <div class="tn-progress-bar tn-widget-content tn-corner-all">
                <div class="tn-progress-bar-value tn-widget-header tn-corner-left tn-border-tbl" style="width: 33.3333%;"></div>
            </div>
            <ul class="tn-helper-clearfix tn-step-scale">
                <li style="width:33.3333%" class="tn-step tn-selected"><b class="tn-widget-content tn-widget-header tn-corner-all"></b><span>1、确认信息 →</span></li>
                <li style="width:33.3333%" class="tn-step"><b class="tn-widget-content tn-corner-all"></b><span>2、点击确认 →</span></li>
                <li style="width:33.3333%" class="tn-step"><b class="tn-widget-content tn-corner-all"></b><span>3、确认完成</span></li>
            </ul>
        </div>
        @using (Html.BeginForm("PayPages", "Alipay", FormMethod.Post))
        {
            <div class="tn-form tn-label-right">
                <div class="tn-form-row">
                    <label class="tn-form-label"><span class="tn-form-required">*</span>商户订单号：</label>
                    <input id="WIDout_trade_no" class="tn-textbox tn-input-long tn-border-gray" name="WIDout_trade_no" type="text" readonly value="@orderNumber"/>
                    @*<asp:TextBox ID="WIDout_trade_no" name="WIDout_trade_no" runat="server" ReadOnly="True"></asp:TextBox>*@
                        @*<span>商户网站订单系统中唯一订单号，必填</span>*@
                </div>
                <div class="tn-form-row">
                    <label class="tn-form-label"><span class="tn-form-required">*</span>订单名称：</label>
                    <input id="WIDsubject" class="tn-textbox tn-input-long tn-border-gray" name="WIDsubject" type="text" readonly value="@orderName"/>
                    @*<asp:TextBox ID="WIDsubject" name="WIDsubject" runat="server" ReadOnly="True"></asp:TextBox>*@
                        @*<span>必填</span>*@
                </div>
                <div class="tn-form-row">
                    <label class="tn-form-label"><span class="tn-form-required">*</span>付款金额：</label>
                    <input id="WIDtotal_fee" class="tn-textbox tn-input-long tn-border-gray" name="WIDtotal_fee" type="text" readonly value="@orderMoney" />
                    @*<asp:TextBox ID="WIDtotal_fee" name="WIDtotal_fee" runat="server" ReadOnly="True"></asp:TextBox>*@
                        @*<span>必填</span>*@
                </div>
                <div class="tn-form-row">
                    <label class="tn-form-label"><span class="tn-form-required">*</span>订单描述：</label>
                    <input id="WIDbody" class="tn-textbox tn-input-long tn-border-gray" name="WIDbody" type="text" readonly value="@orderDescribe" />
                    @*<asp:TextBox ID="WIDbody" name="WIDbody" runat="server" ReadOnly="True"></asp:TextBox>*@
                </div>
                <div class="tn-form-row">
                    @*<label class="tn-form-label">商品展示地址：</label>*@
                    <input id="WIDshow_url" class="tn-textbox tn-input-long tn-border-gray" name="WIDshow_url" type="hidden" readonly value="@productExhibitionUrl" />
                    @*<asp:TextBox ID="WIDshow_url" name="WIDshow_url" runat="server" ReadOnly="True"></asp:TextBox>*@
                        @*<span>需以http://开头的完整路径，例如：http://www.商户网址.com/myorder.html</span>*@
                </div>
                <div class="tn-form-row">
                    <label class="tn-form-label"></label>
                    <span class="tn-text-note">如果您点击“确认”按钮，即表示您同意该次的执行操作。</span>
                </div>
                <div class="tn-form-row tn-form-row-button">
                    <label class="tn-form-label"></label>
                    <button id="BtnAlipay" name="BtnAlipay" type="submit" class="tn-button tn-corner-all tn-button-text-only tn-button-large tn-button-primary"><span class="tn-button-text">提交</span></button>
                    @*<asp:Button ID="BtnAlipay" name="BtnAlipay" class="new-btn-login" Text="确 认" Style="text-align: center;" runat="server" OnClick="BtnAlipay_Click"/>*@
                </div>
            </div>
        }
    </div>
</div>
